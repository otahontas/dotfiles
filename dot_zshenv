# Note: This file is always sourced.
# Set XDG Base Directories
export XDG_CONFIG_HOME=$HOME/.config
export XDG_CACHE_HOME=$HOME/.cache
export XDG_DATA_HOME=$HOME/.local/share

# Set some programs to use XDG Base Directories
export CARGO_HOME=$XDG_CACHE_HOME/cargo
export DOCKER_CONFIG=$XDG_CONFIG_HOME/docker
export DOCKER_HOST="unix://${HOME}/.colima/default/docker.sock"
export GOPATH=$XDG_CACHE_HOME/go
export LESSHISTFILE=$XDG_DATA_HOME/less_history
export NODE_REPL_HISTORY=$XDG_DATA_HOME/node_repl_history
export NOTMUCH_CONFIG=$XDG_CONFIG_HOME/notmuch/config
export NPM_CONFIG_USERCONFIG=$XDG_CONFIG_HOME/npm/npmrc
export PYENV_ROOT=$XDG_CACHE_HOME/pyenv
export RUSTUP_HOME=$XDG_CACHE_HOME/rustup
export SQLITE_HISTORY=$XDG_DATA_HOME/sqlite_history
export WGETRC=$XDG_CONFIG_HOME/wget/wgetrc
export ZDOTDIR=$XDG_CONFIG_HOME/zsh

# Set env vars for some folder for easier access
export CLOUDDIR=~/Library/Mobile\ Documents/com\~apple\~CloudDocs
export DIARYDIR=$CLOUDDIR/diary

# Set up visual and editor
export VISUAL=nvim
export EDITOR=$VISUAL

# Lang stuff
export LC_ALL=en_US.UTF-8
export LC_CTYPE=en_US.UTF-8
export LANG=en_US.UTF-8
export LANGUAGE=en_US
export LC_MONETARY=en_FI.UTF-8
export LC_TIME=en_FI.UTF-8
