# Add mailbox configs to chezmoi config file in $XDG_CONFIG_HOME/chezmoi
{{- range .aerc.mailboxes -}}
[{{ .name }}]
source = {{ .source }}
source-cred-cmd = pass {{ .pass_entry }} | head -n 1
outgoing = {{ .outgoing }}
outgoing-cred-cmd = pass {{ .pass_entry }} | head -n 1
default = INBOX
copy-to = Sent
from = {{ .from }}

{{ end }}
