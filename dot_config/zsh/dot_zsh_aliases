# Set some better defaults
alias grep="grep --color=auto"
alias info="info --vi-keys"
alias ls="exa"
alias cat="bat"
alias prev="bat"
alias rm='echo -E "use \"\\rm\", if you really need to rm. Otherwise use \"trash\"."; false'

# Listing commands
alias la="exa -la"
alias ll="exa -l"
alias lr="exa -Rl"

# Backtracking
alias ...="cd ../.."
alias ....="cd ../../.."

# Aliases for daily tools
alias mail="aerc"
alias spotify="pkill spotifyd; spotifyd && spt; pkill spotifyd"

# Don't autocorrect some commands
alias cd="nocorrect cd"
alias cp='nocorrect cp '
alias mv='nocorrect mv '
alias mkdir='nocorrect mkdir '

# Short git aliases
alias gap="git ap"
alias gbr="git br"
alias gcm="git cm"
alias gco="git co"
alias gcp="git cp"
alias gd="git d"
alias gds="git ds"
alias gpoh="git poh"
alias gpohf="git pohf"
alias gra="git ra"
alias grc="git rc"
alias gre="git re"
alias gres="git res"
alias grp="git rp"
alias gri="git ri"
alias gs="git s"
alias gsd="git sd"
alias gsl="git sl"
alias gss="git ss"
alias gsw="git sw"
