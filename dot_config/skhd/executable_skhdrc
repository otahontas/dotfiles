# Focus on windows
shift + alt - j : yabai -m window --focus prev || yabai -m window --focus last
shift + alt - k : yabai -m window --focus next || yabai -m window --focus first

# transform windows
rshift - j : yabai -m space --rotate 90
rshift - k : yabai -m space --rotate 270
rshift - s : yabai -m space --mirror x-axis
rshift - v : yabai -m space --mirror y-axis

# Focus to spaces
shift + alt - 1 : yabai -m space --focus 1
shift + alt - 2 : yabai -m space --focus 2
shift + alt - 3 : yabai -m space --focus 3
shift + alt - 4 : yabai -m space --focus 4
shift + alt - 5 : yabai -m space --focus 5
shift + alt - 6 : yabai -m space --focus 6
shift + alt - 7 : yabai -m space --focus 7
shift + alt - h : yabai -m space --focus prev
shift + alt - l : yabai -m space --focus next

# send window to space and follow focus
rshift - 1 : yabai -m window --space 1; yabai -m space --focus 1;
rshift - 2 : yabai -m window --space 2; yabai -m space --focus 2;
rshift - 3 : yabai -m window --space 3; yabai -m space --focus 3;
rshift - 4 : yabai -m window --space 4; yabai -m space --focus 4;
rshift - 5 : yabai -m window --space 5; yabai -m space --focus 5;
rshift - 6 : yabai -m window --space 6; yabai -m space --focus 6;
rshift - 7 : yabai -m window --space 7; yabai -m space --focus 7;
rshift - l : yabai -m window --space next; yabai -m space --focus next;
rshift - h : yabai -m window --space prev; yabai -m space --focus prev;
