# Program aliases. Some of these are for most used commands, some just set
# Better defaults
alias diff="diff --color=auto"
alias grep="grep --color=auto"
alias info="info --vi-keys"
alias ls="ls --color=auto"

# Set some programs to use XDG Base
alias mvn="mvn -gs '$XDG_CONFIG_HOME/maven/settings.xml'"
alias tmux="tmux -u -f $XDG_CONFIG_HOME/tmux/config"
alias wget="wget --hsts-file='$XDG_DATA_HOME/wget-hsts'"

# Listing commands
alias la="ls -la"
alias ll="ls -l"
alias lr="ls -Rl"

# Tmux helper commands
alias ts="tmux split-window"

# Open with rifle (from ranger), falls back to xdg-open
alias o="rifle"

# Backtracking
alias ...="cd ../.."
alias ....="cd ../../.."
