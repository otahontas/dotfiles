# Program aliases. Some of these are for most used commands, some just set
# better defaults
alias diff="diff --color=auto"
alias g="git"
alias grep="grep --color=auto"
alias info="info --vi-keys"
alias ls="ls --color=auto"
alias o="rifle"
alias pa="pacman"
alias ra="ranger"
alias v="nvim"
alias vi="nvim"
alias vim="nvim"
alias vimdiff="nvim -d"

# Programming
alias py="python"

# Set some programs to use XDG Base
alias mvn="mvn -gs '$XDG_CONFIG_HOME/maven/settings.xml'"
alias tmux="tmux -u -f $XDG_CONFIG_HOME/tmux/config"
alias wget="wget --hsts-file='$XDG_DATA_HOME/wget-hsts'"

# Listing commands
alias la="ls -la"
alias ll="ls -l"
alias lr="ls -Rl"
