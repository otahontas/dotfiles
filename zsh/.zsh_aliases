# Set some better defaults
alias diff="diff --color=auto"
alias grep="grep --color=auto"
alias info="info --vi-keys"
alias ls="exa"

# Set some programs to use XDG Base
alias mvn="mvn -gs '$XDG_CONFIG_HOME/maven/settings.xml'"
alias tmux="tmux -u -f $XDG_CONFIG_HOME/tmux/config"

# Listing commands
alias la="ls -la"
alias ll="ls -l"
alias lr="ls -Rl"

# Backtracking
alias ...="cd ../.."
alias ....="cd ../../.."

# Aliases for daily tools
alias calendar-offline="khal interactive"
alias calendar="vdirsyncer sync && khal interactive && vdirsyncer sync"
alias mail-offline="aerc"
alias mail="offlineimap && aerc && offlineimap"
alias o="rifle"
alias spt-new="pkill spotifyd; spotifyd && spt"
alias sys="systemctl"
alias sysu="systemctl --user"
alias todo="$EDITOR ~/documents/todo/todo.txt"
alias todone="$EDITOR ~/documents/todo/done.txt"
alias tsplit="tmux split-window"
alias vi="nvim"
alias vim="nvim"
alias vimdiff="nvim -d"
