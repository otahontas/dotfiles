# Simple output. Allows Sway to figure out what to do with external monitors
output "*" bg /home/otahontas/media/background.jpg fill
font pango:MesloLGS NF 11
gaps {
    outer 10
    inner 5
}
default_border pixel 2
xwayland disable

# Colors from Rigel theme
set $fg     #e6e6dc
set $bg     #002635
set $black1 #00384d
set $black2 #517f8d
set $red1   #c43061
set $red2   #ff5a67
set $green1 #7fc06e
set $green2 #9cf087
set $yel1   #f08e48
set $yel2   #ffcc1b
set $blue1  #1c8db2
set $blue2  #7eb2dd
set $mag1   #c694ff
set $mag2   #fb94ff
set $cyan1  #00cccc
set $cyan2  #00ffff
set $white1 #77929e
set $white2 #b7cff9
set $plainw #ffffff

# Input
focus_follows_mouse no
input "1739:0:Synaptics_TM3276-022" {
    dwt enabled
    tap enabled
    middle_emulation disabled
    click_method none
    natural_scroll enabled
}
input "1:1:AT_Translated_Set_2_keyboard" {
    xkb_layout "us(altgr-intl), fi(nodeadkeys)"
    xkb_options "grp:ctrls_toggle, caps:swapescape"
}

# Variables for vim style movement, terminal and bemenu program launcher
set $mod Mod4
set $left h
set $down j
set $up k
set $right l
set $term kitty
set $menu wofi | xargs swaymsg exec --

# Idle settings for locking and sleeping. Set on by default, but can be toggled
# off and on again with keybindings.
set $idle \
    swayidle -w \
	timeout 300 'swaylock -f -c 000000' \
    timeout 600 'swaymsg "output * dpms off"' \
    resume 'swaymsg "output * dpms on"' \
    before-sleep 'swaylock -f -c 000000'
exec $idle
bindsym $mod+i exec $idle
bindsym $mod+Shift+i exec pkill swayidle

# Basic keybindings
bindsym $mod+Return exec $term
bindsym $mod+Shift+q kill
bindsym $mod+d exec kitty --class=launcher sh -c "compgen -c | sort -u | fzf | xargs -r swaymsg -t command exec"  
bindsym $mod+Shift+d exec kitty --class=opener zsh -is eval "source $ZDOTDIR/cond_settings/exit_after_running.zsh"
for_window [app_id="^launcher$|^opener$"] floating enable, resize set width 800 px height 400 px
bindsym $mod+Shift+c reload
bindsym $mod+Shift+o exec swaylock -f -c 000000
bindsym $mod+Shift+p exec grim $HOME/screenshot_$(date -u +"%Y-%m-%d-%H:%M:%S").png
bindsym $mod+Shift+Ctrl+p exec grim -g "$(slurp)" $HOME/screenshot_$(date -u +"%Y-%m-%d-%H:%M:%S").png
bindsym $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -b 'Yes, exit sway' 'swaymsg exit'

# Movement keybindings
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5

bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5

bindsym $mod+s splith
bindsym $mod+v splitv
bindsym $mod+f fullscreen
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

mode "resize" {
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# Special key keybindings
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle
bindsym XF86MonBrightnessDown exec brightnessctl set 5%-
bindsym XF86MonBrightnessUp exec brightnessctl set +5%

# Status Bar:
bar {
    position top
    status_command while ~/.config/sway/status.sh; do sleep 5; done
    font pango:MesloLGS NF Bold 10.5

    colors {
        statusline $fg
        background $bg
        focused_workspace $fg $cyan1 $fg
        inactive_workspace $blue2 $blue1 $blue2
    }
}

include @sysconfdir@/sway/config.d/*
