# Note: This file is always sourced and should be symlinked to $HOME/.pam_environment
# .pam_env is read before other files, in particular before /.profile, ~/.bash_profile and ~/.zshenv. 
# Settings env variables here allows them to be used in all shells

# Set XDG Base Directories
XDG_CONFIG_HOME     	DEFAULT=@{HOME}/.config
XDG_CACHE_HOME      	DEFAULT=@{HOME}/.cache
XDG_DATA_HOME       	DEFAULT=@{HOME}/.local/share
XDG_DATA_DIRS       	DEFAULT=/usr/local/share:/usr/share
XDG_CONFIG_DIRS     	DEFAULT=/etc/xdg

# Set some programs to use XDG Base Directories
ANDROID_SDK_HOME	    DEFAULT=${XDG_CONFIG_HOME}/android
CARGO_HOME          	DEFAULT=${XDG_CACHE_HOME}/cargo
DOCKER_CONFIG       	DEFAULT=${XDG_CONFIG_HOME}/docker
GNUPGHOME           	DEFAULT=${XDG_CONFIG_HOME}/gnupg
GOPATH              	DEFAULT=${XDG_CACHE_HOME}/go
GRADLE_USER_HOME    	DEFAULT=${XDG_CACHE_HOME}/gradle
LESSHISTFILE        	DEFAULT=${XDG_DATA_HOME}/less_history
MATLAB_LOG_DIR          DEFAULT=${XDG_CACHE_HOME}/matlab
NODE_REPL_HISTORY       DEFAULT=${XDG_DATA_HOME}/node_repl_history
NPM_CONFIG_USERCONFIG   DEFAULT=${XDG_CONFIG_HOME}/npm/npmrc
NOTMUCH_CONFIG          DEFAULT=${XDG_CONFIG_HOME}/notmuch/config
OCTAVE_HISTFILE         DEFAULT=${XDG_DATA_HOME}/octave_hist
PASSWORD_STORE_DIR  	DEFAULT=${XDG_DATA_HOME}/pass
RUSTUP_HOME         	DEFAULT=${XDG_CACHE_HOME}/rustup
SQLITE_HISTORY          DEFAULT=${XDG_DATA_HOME}/sqlite_history
WEECHAT_HOME            DEFAULT=${XDG_CONFIG_HOME}/weechat
WGETRC                  DEFAULT=${XDG_CONFIG_HOME}/wget/wgetrc
ZDOTDIR             	DEFAULT=${XDG_CONFIG_HOME}/zsh
_JAVA_OPTIONS           DEFAULT=-Djava.util.prefs.userRoot=${XDG_CONFIG_HOME}/java

# Set every possible backend to use wayland
ECORE_EVAS_ENGINE                   DEFAULT=wayland_egl
ELM_ENGINE                          DEFAULT=wayland_egl
MOZ_ENABLE_WAYLAND  	            DEFAULT=1
QT_QPA_PLATFORM                     DEFAULT=wayland-egl
QT_WAYLAND_DISABLE_WINDOWDECORATION DEFAULT=1
SDL_VIDEODRIVER                     DEFAULT=wayland
_JAVA_AWT_WM_NONREPARENTING         DEFAULT=1

# Set up visual and editor
VISUAL              	DEFAULT=nvim
EDITOR              	DEFAULT=${VISUAL}

# Set up java envs
JAVA_HOME               DEFAULT=/usr/lib/jvm/java-11-openjdk/
PATH                    DEFAULT=${JAVA_HOME}:${PATH}

# Add user-spesific bin-stuff to PATH
PATH                    DEFAULT={PATH}:@{HOME}/.bin
