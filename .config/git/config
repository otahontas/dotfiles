[gpg]
  format = ssh
[gpg "ssh"]
  program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"
[commit]
  gpgsign = true
[push]
    default = matching
    follow-tags = true
[pull]
    rebase = true
[merge]
    tool = vimdiff
    conflictstyle = zdiff3
[mergetool]
	keepBackup = false
[mergetool "vimdiff"]
    cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[commit]
    gpgsign = true
[tag]
    gpgsign = true
[alias]
    a = add
    ap = add -p
    br = branch
    cane = commit --amend --no-edit
    cedit = commit --amend
    c = commit
    cm = commit -m
    co = checkout
    cp = cherry-pick
    d = diff
    dad = "!curl https://icanhazdadjoke.com/"
    ds = diff --staged
    dt = difftool
    hist = log --pretty=format:'%h %aD | %s%d [%an]' --graph --date=short
    ignore = "!gi() { curl -sL https://www.toptal.com/developers/gitignore/api/$@ ;}; gi"
    last = log -1 HEAD
    mt = mergetool
    poh = push origin HEAD
    pohf = push --force origin HEAD
    ra = "rebase --abort"
    rc = "rebase --continue"
    re = restore
    res = restore --staged
    rp= restore -p
    rsp = restore --staged -p
    ri = "rebase -i"
    root = rev-parse --show-toplevel
    s = status
    sd = stash drop stash@{0}
    sl = stash list
    ss = stash show -p
    sw = switch
    undo = "reset --soft HEAD^"
    hide = "update-index --skip-worktree"
    unhide = "update-index --no-skip-worktree"
    hidden = "!git ls-files -v . | grep '^S'"
[init]
    defaultBranch = main
	templatedir = /Users/otahontas/.config/git/template
[interactive]
    diffFilter = delta --color-only
[diff]
    colorMoved = default
	tool = nvim -d

# default user overrides
[include]
    path = ~/.config/git/default-user-config.gitconfig

# delta colors and settings
[core]
    pager = delta

[include]
    path = ~/.config/git/catppuccin-mocha.gitconfig

[delta]
	features = catppuccin-mocha
    navigate = true
    side-by-side = true
    hyperlinks = true
