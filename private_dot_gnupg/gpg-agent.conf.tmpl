{{- if eq .chezmoi.hostname "mahisbook" }}
# Set gpg to use graphical pinentry
pinentry-program /usr/local/bin/pinentry-mac
{{- end }}

# Set cache for two days
max-cache-ttl 604800
default-cache-ttl 604800
default-cache-ttl-ssh 604800
max-cache-ttl-ssh 604800

# Enable gpg agent to be ssh agent as well
enable-ssh-support
